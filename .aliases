# all my aliases
# For a full list of active aliases, run `alias`.
# Most of the navigation aliases require k.sh to be installed
# Some of the aliases below are for functions in the ./.functions file

# bundle
alias be='bundle exec'
alias bera='bundle exec rake'
alias bers='bundle exec rspec'
alias bi='bundle install'
alias bo='bundle open'
alias bu='bundle update'

# docker
alias dk='docker'
alias dkc='docker-compose'
alias dkm='docker-machine'

# git
alias g='git'
alias ga='git add'
alias gaa='git add .'
alias gac='git_add_commit'
alias gacp='git_add_commit_push'
alias garc='git add . && git rebase --continue'
alias gb='git branch'
alias gba='git branch -a' # list all branches
alias gbd='git branch -D' # delete local branch
alias gbdr='git_branch_delete_remote' # delete remote branch
alias gbpr='git remote prune origin' # removes dead branches from remote origin
alias gbr='git branch -r' # list remote branches
alias gca='git commit --amend'
alias gcfm='git checkout --force master'
alias gcm='git commit -m'
alias gcp='git_commit_push'
alias gco='git checkout'
alias gcob='git checkout -b'
alias gcof='git checkout --force'
alias gcog='git checkout gh-pages'
alias gcom='git checkout master'
alias gd='git diff'
alias gdf='git_diff_file'
alias gds='git diff --stat'
alias gdns='git diff --numstat'
alias gf='git fetch'
alias ghl='cat .git/refs/heads/master' # full hash
alias ghs='git log --pretty=format:"%h" -n 1 | cat' # short hash
alias gin='git init'
alias gig='git_ignore_and_remove'
alias gln='git_lastnhashes'
alias gm='git merge'
alias gp='git push'
alias gpf='git push --force'
alias gpl='git pull'
alias gplu='git pull -u'
alias gpluo='git pull -u origin'
alias gpu='git push -u'
alias gpuo='git push -u origin'
alias gra='git remote add'
alias grb='git rebase'
alias grbc='git rebase --continue'
alias grbm='git rebase master'
alias grbs='git rebase --skip'
alias grollback='git reset HEAD~1'
alias grollforward='git reset HEAD@{1}'
alias grp='git remote prune'
alias grpo='git remote prune origin' # removes dead branches from remote origin
alias grr='git remote remove'
alias grao='git remote add origin'
alias grro='git remote remove origin'
alias grv='git remote --verbose'
alias gs='git status'
alias gst='git stash'
alias gsta='git stash apply'
alias gstai='git stash apply --index'
alias gstb='git stash branch'
alias gstl='git stash list'
alias gstu='git stash show -p | git apply -R' # git stash unapply
alias gviz='git log --oneline --decorate --graph --all'

# javascript/npm/nvm/gulp/grunt
alias gl='gulp'
alias gls='gulp serve'
alias glr='rm -rf node_modules; rm -rf bower_components; npm cache clean; npm install; gulp serve'
alias gt='grunt'
alias gts='grunt serve'
alias gtsf='grunt serve --force'
alias gtt='grunt test'
alias gtrs='rm -rf bower_components; rm -rf node_modules; npm cache clean; npm install; grunt serve --force'
alias npme='PATH=$(npm bin):$PATH'
alias react_new='new_react_project'
alias react_install='npm install --save react && npm install --save react-dom'
alias react_webpack="cp $DOTFILES/webpack.config.js ./webpack.config.js && npm install --save webpack"
alias react_babel_install='npm install --save babel-core && npm install --save babel-loader && npm install --save babel-preset-react'
alias wp='$(npm bin)/webpack'

# miscellany
alias captainslog='atom -n ~/Documents/work_log.md'
alias chrome='open -a "Google Chrome"'
alias ci='curl -I'
alias flushOpenWith='eval "$(/System/Library/Frameworks/CoreServices.framework/Versions/A/Frameworks/LaunchServices.framework/Versions/A/Support/lsregister -kill -r -domain local -domain user; killall Finder;)"'

# mysql
alias msst='mysql.server start'
alias mssp='mysql.server stop'
alias msr='mysql.server restart'

# navigation
alias cda='cd_atom'
alias cdl='cd_ll'
alias la='k -A'
alias ll='k -Ah'
alias lt='k -Ah *'
alias mkcd='mkdir_cd'
alias up='cd ..'
alias upl='cd .. && k -Ah'
alias upp='cd ../..'
alias uppl='cd ../.. && k -Ah'
alias whcd='which_cd'
alias whcdl='which_cd_ll'
alias za='z_atom'
alias zl='z_ll'

# ruby/rails
alias gi='gem install'
alias r='rails'
alias rc="export RAILS_ENV='development'; rails console"
alias rdbm='rake db:migrate'
alias rdbr='rake db:reset'
alias rdbs='rake db:seed'
alias rdbrb='rake db:rollback'
alias rdbms='rake db:migrate:status'
alias rrs='rails_reset'

# server
alias pyss='python -m SimpleHTTPServer'

# dotfiles (and iTerm autolaunch)
alias aa='atom $DOTFILES/.aliases'
alias ad='atom $DOTFILES' # opens atom with navigation pane for all dotfiles
alias af='atom $DOTFILES/.functions'
alias av='atom $DOTFILES/.vimrc'
alias az='atom $DOTFILES/.zshrc'
alias sa='source $DOTFILES/.aliases'
alias sd='. $DOTFILES/.aliases; . $DOTFILES/.functions; . ~/.zshrc'
alias sf='source $DOTFILES/.functions'
alias sz='source ~/.zshrc'
alias va='vim $DOTFILES/.aliases'
alias vf='vim $DOTFILES/.functions'
alias vggi='vim ~/.gitignore_global'
alias vv='vim $DOTFILES/.vimrc'
alias vz='vim $DOTFILES/.zshrc'
alias vi='vim $DOTFILES/iTermAutoLaunch.scpt'
