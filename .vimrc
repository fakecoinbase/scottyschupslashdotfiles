syntax on
set ignorecase
set smartcase
set incsearch
set hlsearch
set ruler
set showmatch
set mat=2
set encoding=utf8
map <space> /
map <c-space> ?
set backspace=indent,eol,start
set autoread
set cmdheight=2
set number
set numberwidth=5
set rnu
au FocusLost * set number
au FocusGained * set relativenumber
set showcmd
set wildmenu
set listchars=tab:<-,trail:~
set tabstop=4 softtabstop=0 expandtab shiftwidth=2 smarttab
